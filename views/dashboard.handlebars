<section class="container">
    <h2>Create New Post</h2>
    <form class="new-post-form">
        <div class="details">
            <label for="post-title">Title <em>(required)</em></label>
            <input type="text" id="post-title" name="post-title" />
        </div>
        <div>
            <label for="post-text">Description <em>(optional)</em></label>
            <input type="text" id="post-text" name="post-text" />
        </div>
        <div>
            <canvas id="canvas" width="600" height="500" style="display: block; margin: 0 auto;"></canvas>
        </div>
        <div id="post-div">
            <button id="clear" class="post-btns">clear</button>
            <input type="reset" class="post-btns" >
            <button id="save" class="post-btns"> save </button>
            <button id="post" class="post-btns"> post </button>
            <input type="file" id="load" name="avatar" accept="image/png">
        </div>
        <button type="submit" class="btn">Create</button>
    </form>

</section>

{{#if posts.length}}
<section>
    <h2>Your Posts</h2>
    <ul class="homepage">
        {{#each posts as |post|}}
        <li>
            {{> dashboard-info post }}
        </li>
        {{/each}}
    </ul>
</section>
{{/if}}
